%h1= "Welcome to #{Settings.app_name}"
= form_tag tweet_path do
  = text_area_tag :text
  = submit_tag 'ツイートする'

= form_tag follow_check_path do
  = text_field_tag :name, '', placeholder: 'ユーザー名を入力'
  = submit_tag 'フォローチェック'

- if @follows.present?
  = 'フォローユーザー一覧'
  - @follows.each do |follow|
    %table
      %td= follow.name